    "@electron-forge/plugin-fuses": "^7.5.0",
    "@electron-forge/publisher-github": "^7.6.0",
    "@electron/fuses": "^1.8.0",
    "@types/jest": "^29.5.14",
    "electron": "32.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1",
